[colors]
background = #282A2E
background-alt = #373B41
foreground = #C5C8C6
primary = #F0C674
secondary = #8ABEB7
alert = #A54242
disabled = #707880

[bar/example]
width = 100%
height = 2.5%
radius = 6

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin = 2

separator = |
separator-foreground = ${colors.disabled}

font-0 = FontAwesome5Free:style=Solid:pixelsize=14:antialias=false;3
font-1 = Font Awesome 6 Free,Font Awesome 6 Free Regular:style=Regular
font-2 =  Font Awesome 6 Free,Font Awesome 6 Free Solid:style=Solid
font-3 = Font Awesome 6 Brands,Font Awesome 6 Brands Regular:style=Regular
font-4 = FontAwesome:style=Regular
font-5 = Font Awesome 6 Free,Font Awesome 6 Free Regular:style=Regular

modules-left = i3  xkeyboard
modules-center =filesystem memory cpu swap temperature fan battery pulseaudio xbacklight wlan updates-pacman-aurhelper
modules-right = powermenu weather date 

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

tray-position = right
tray-padding = 2
; wm-restack = generic
; wm-restack = bspwm
; wm-restack = i3

; override-redirect = true

bottom = true

[module/i3]
type = internal/i3

;label-focused = %index%
label-focused-foreground = #f90000
;label-focused-background = #3f3f3f
label-focused-underline = #fba922
;label-focused-padding = 1

padding-left = 1.5
padding-right = 1.5

module-margin-left = 2
module-margin-right = 2

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = fabel-focused = %index%

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = true
; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction 
; Default: true
reverse-scroll = false
; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
fuzzy-match = true

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#F0C674}%mountpoint%%{F-} %percentage_used%%

label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.primary}
format-volume = <label-volume>

label-volume = %percentage%%

label-muted = muted
label-muted-foreground = ${colors.disabled}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = %layout%
label-layout-foreground = ${colors.primary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-foreground = ${colors.background}
label-indicator-background = ${colors.secondary}

[module/temperature]
type = custom/script
#exec = ~/.config/custom-scripts/cpu-temp.sh
exec = sensors | grep -i id | awk '{print $4 " °C"}' | cut -c 2,3,4,5,6,7,8,9
interval = 3
format-prefix = " "
format-prefix-foreground = ${colors.primary}
#format-prefix-foreground = ${colors.foreground-alt}
#format-underline = #fba922

[module/fan]
type = custom/script
exec = sensors | grep -i fan1 | awk '{print $2 " RPM"}'
format-prefix = " "
format-prefix-foreground = ${colors.primary}
#format-prefix-foreground = ${colors.foreground-alt}
#format-underline = #fba922

[module/battery]
type = custom/script
exec = ~/.config/i3blocks/battery/battery_info.sh
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.primary}
#format-prefix-foreground = ${colors.foreground-alt}
#format-underline = #fba922

[module/memory]
type = custom/script
exec = free -h | awk '/Mem:/ { printf("%5s/%s \n", $3, $2) }'
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.primary}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.primary}
label = %percentage:2%%

[module/swap]
type = custom/script
exec = free -h | awk '/^Swap:/{print $3}'
interval=2
format-prefix ="SWP "
format-prefix-foreground = ${colors.primary}
#format-underline = #fba922

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}%ifname%%{F#707880} disconnected



[module/weather]
type = custom/script
exec = ~/.config/i3blocks/weather/weather.sh
interval = 1800
format-prefix-foreground = ${colors.primary}


[module/date]
type = internal/date
interval = 1

date = %H:%M
date-alt = %Y-%m-%d %H:%M:%S

label = %date%
label-foreground = ${colors.primary}

[settings]
screenchange-reload = true
pseudo-transparency = true

[module/xbacklight]
type = custom/script
#exec = xbacklight | cut -f1 -d'.'  | awk '{print $1"%"}'
exec = brightnessctl | grep % | awk '{print $4}' | sed 's/(//g' | sed 's/)//g'
format-prefix = " "
format-prefix-foreground = ${colors.primary}

[module/wlan]
;type = internal/network
;interface = wlan0
;interval = 3.0
type = custom/script
exec = nmcli -t -f SSID,SIGNAL dev wifi list | grep "^IZZI-10B2:" | cut -d : -f 2 | awk '{print $1"%"}'
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}

[module/updates-pacman-aurhelper]
type = custom/script
exec = ~/.config/polybar/updates-pacman-aurhelper.sh
format-prefix = " "
#format-prefix-foreground = ${colors.foreground-alt}
format-prefix-foreground = ${colors.primary}
#format-underline = #fba922
interval = 600

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
;label-open = 
#label-open-foreground = ${colors.primary}
label-open-foreground = #FF0000
label-close =  cancel
label-close-foreground = ${colors.primary}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0
