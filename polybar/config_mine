[module/pulseaudio]
type = custom/script
exec = pacmd list-sinks|grep -A 15 '* index'| awk '/volume: front/{print $5}'
interval = 1
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #fba922


[module/battery]
type = custom/script
exec = ~/.config/i3blocks/battery/battery_info.sh
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #fba922

[module/temperature]
type = custom/script
#exec = ~/.config/custom-scripts/cpu-temp.sh
exec = sensors | grep -i id | awk '{print $4 " °C"}' | cut -c 2,3,4,5,6,7,8,9
interval = 3
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #fba922

[module/fan]
type = custom/script
exec = sensors | grep -i fan1 | awk '{print $2 " RPM"}'
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #fba922

[module/xbacklight]
type = custom/script
#exec = xbacklight | cut -f1 -d'.'  | awk '{print $1"%"}'
exec = brightnessctl | grep % | awk '{print $4}' | sed 's/(//g' | sed 's/)//g'
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #fba922

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
;label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/weather]
type = custom/script
exec = ~/.config/i3blocks/weather/weather.sh
interval = 1800
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #fba922

[module/updates-pacman-aurhelper]
type = custom/script
exec = ~/.config/polybar/updates-pacman-aurhelper.sh
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #fba922
interval = 600

